<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24245C"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/et_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="#B3DBEE"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_20sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="User Name"
            android:textColor="#000"
            android:textFontWeight="30dp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/black_stroke_bg"
            android:drawableLeft="@drawable/ic_email_orange"
            android:paddingHorizontal="@dimen/_10sdp">


        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="Password"
            android:textColor="#000"
            android:textFontWeight="30dp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="italic" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/black_stroke_bg"
            android:drawableLeft="@drawable/ic_lock"
            android:paddingHorizontal="@dimen/_10sdp">

        </EditText>

        <TextView
            android:id="@+id/tv_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:linksClickable="true"
            android:text="Forgot Password?"
            android:textColor="#24245C" />

        <Button

            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border_signin"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="Sign in"
            android:textColor="#ffff" />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_above="@+id/et_block"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/gol" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_75sdp">


        <TextView
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Don't have an account yet? "
            android:textColor="#fff"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up now."
            android:textColor="#fff"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>

</RelativeLayout>